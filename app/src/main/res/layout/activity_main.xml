<?xml version="1.0" encoding="utf-8"?>
    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.myapplication.app.MainActivity"
android:background="@drawable/Mountains"


    android:gravity="center">

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imageButton"
        android:layout_row="15"
        android:layout_column="4"
        android:src="@mipmap/globe_tak"
        android:background="#ffffff"
        android:cropToPadding="false"
        android:elevation="15dp" />

    <TextView
        android:layout_width="291dp"
        android:layout_height="57dp"
        android:text="Use My Location"
        android:id="@+id/myPositionTextView"
        android:textIsSelectable="false"
        android:textSize="32dp"
        android:gravity="center"
        android:textStyle="bold"
        android:background="#6bc9f8"
        android:textColor="#ffffff"
        android:layout_row="15"
        android:layout_column="24"
        android:layout_weight="0.40"
        android:layout_above="@+id/DestinationTextView"
        android:layout_alignParentEnd="true"
        android:elevation="15dp"
        android:layout_gravity="center_horizontal|left|fill_vertical" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imageButton2"
        android:src="@mipmap/search_globe"
        android:layout_row="62"
        android:layout_column="4"
        android:background="#ffffff"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:elevation="15dp" />

    <TextView
        android:layout_width="292dp"
        android:layout_height="59dp"
        android:text="Enter a Destination"
        android:id="@+id/DestinationTextView"
        android:textSize="32dp"
        android:gravity="center"
        android:textStyle="bold"
        android:autoText="false"
        android:background="#6bc9f8"
        android:elegantTextHeight="false"
        android:elevation="15dp"
        android:textColor="#ffffff"
        android:layout_marginBottom="80dp"
        android:layout_row="62"
        android:layout_column="24"
        android:layout_weight="0.49"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center_horizontal|left"
        android:layout_marginTop="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="What can we do for you today?"
        android:id="@+id/question_TextView"
        android:layout_row="65"
        android:layout_column="24"
        android:textColor="#ffffff"
        android:layout_gravity="center_horizontal|bottom" />

</GridLayout>
